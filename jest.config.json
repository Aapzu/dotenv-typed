{
  "projects": [
    {
      "displayName": "unit",
      "testRegex": ".*(?<!integration)\\.test\\.ts$",
      "setupFiles": ["<rootDir>/src/mocks.ts"],
      "preset": "ts-jest",
      "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"]
    },
    {
      "displayName": "integration",
      "testRegex": ".*\\.integration\\.test\\.ts$",
      "preset": "ts-jest",
      "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"]
    },
    {
      "displayName": "types",
      "testRegex": ".*\\.test-d\\.ts$",
      "runner": "jest-runner-tsd"
    }
  ]
}
